<div class="container">
  <% if @employees.empty? %>
      <div class="alert alert-danger" role="alert">
        <strong>Sorry!</strong> This department doesn't have any employees.
      </div>
  <% else %>
      <div class="container">
        <h3>Employees of <%= @employees.first.department.name %></h3>

        <%= link_to cut_employees_path(@employees.pluck(:id)), method: :post, remote: true do %>
            <p>
              <button type="button" class="btn btn-warning mybuttons">Cut all salaries</button>
            </p>
        <% end %>

        <%= render partial: 'employees/partials/employee_table', locals: {employees: @employees} %>
      </div>
  <% end %>
</div>
<div id="employee_modal" class="modal fade" role="dialog"></div>